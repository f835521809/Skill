/* pages/home/home.wxss */
.ipt{
  width: 100%;
  height: 145rpx;
  border-bottom: 2rpx solid #F2F2F2;
}
.ipt input{
  width: 695rpx;
  margin-left: 30rpx;
  background: #F2F2F2;
  border-radius: 15rpx;
  height: 70rpx;
  margin-top: 35rpx;
  text-align: center;
  font-size: 32rpx;
}
.main{
  width: 100%;
}
::-webkit-scrollbar{
    width: 0;
    height: 0;
    color: transparent;
}

.main dl{
  width: 100%;
  height: 90rpx;
  display: flex;
  border-bottom: 1px solid #eee;
}
.main dl dt{
  width: 120rpx;
  height: 100%;
}
.main dl dt image{
  width: 90rpx;
  height: 70rpx;
  margin-top: 10rpx;
  margin-left: 15rpx;
}
.main dl dd{
  flex: 1;
  line-height: 90rpx;
  font-size: 34rpx;
  padding-left: 10rpx;
}
.rightBox{
  position: fixed;
  top:100rpx;
  right: 30rpx;
}
.rightBox text{
  display: block;
  text-align: center;
  color: #666;
}
.tit{
  display: block;
  height: 60rpx;
  background: #ccc;
  line-height: 60rpx;
}

